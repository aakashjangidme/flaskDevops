{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "command": [
                "gunicorn",
                "-b",
                ":5000",
                "run:app"
            ],
            "essential": false,
            "image": "aakashjangidme/flask_devops_python",
            "mountPoints": [
                {
                    "containerPath": "/app",
                    "sourceVolume": "api_data"
                }
            ],
            "memory": 128,
            "name": "api"
        },
        {
            "name": "reverse_proxy",
            "essential": true,
            "memory": 128,
            "image": "aakashjangidme/flask_devops_nginx",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "links": [
                "api"
            ]
        }
    ],
    "volumes": [
        {
            "name": "api-data",
            "host": {
                "sourcePath": "api_data"
            }
        }
    ]
}